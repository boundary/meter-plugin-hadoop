  "paramArray": {
    "itemTitle": [
      "host"
    ],
    "schemaTitle": "Hadoop Cluster"
  },
  "paramSchema": [
    {
      "title": "Node Type",
      "name": "type",
      "description": "Type of hadoop node ",
      "type": {
        "enum": [
          [
            "Single Node",
            "Single Node"
          ],
          [
            "Multi Node",
            "Multi Node"
          ]
        ]
      },
      "default": "",
      "required": true
    },
    {
      "title": "Host",
      "name": "host",
      "description": "The hadoop hostname",
      "type": "string",
      "default": "",
      "required": true
    },
    {
      "title": "RM Port",
      "name": "rmPort",
      "description": "Resource manager hadoop port number",
      "type": "integer",
      "default": 8088,
      "required": true
    },
    {
      "title": "DataNode Port",
      "name": "dnPort",
      "description": "DataNode hadoop port number",
      "type": "integer",
      "default": 50075,
      "required": true
    },
    {
      "title": "NameNode Port",
      "name": "nnPort",
      "description": "NameNode hadoop port number",
      "type": "integer",
      "default": 50070,
      "required": true
    },
    {
      "title": "Polling Interval(ms)",
      "name": "pollInterval",
      "description": "The polling interval (in milliseconds) to call the hadoop performance metrics collector",
      "type": "integer",
      "default": 1000,
      "required": true
    }
  ]
}
